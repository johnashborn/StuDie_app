<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pngToText"
    android:background="@drawable/log_in_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert your picture to text"
            android:gravity="center"
            android:fontFamily="@font/agbalumo"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/bondpaper">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <MultiAutoCompleteTextView
                    android:id="@+id/photoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your text here"
                    android:textColorHint="#949191"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    />



            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/toGallery"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:drawableStart="@drawable/icons8_photo_gallery_27"
                android:padding="10dp"
                android:text="Gallery"
                android:textColor="@color/black"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="5dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/convert"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/button"
                android:drawableStart="@drawable/outline_arrow_circle_right_24"
                android:padding="10dp"
                android:text="Convert!!"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>


        </LinearLayout>







    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>